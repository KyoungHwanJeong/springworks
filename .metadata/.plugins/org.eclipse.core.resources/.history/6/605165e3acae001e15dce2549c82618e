package com.khit.todoweb.dto;

import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.NoArgsConstructor;

@NoArgsConstructor
@AllArgsConstructor
@Data
public class PageRequestDTO {

	private int page = 1;
	private int size = 10;	//페이지당 게시글 수
	
	public int getSkip() {
		return (page - 1)* 10;	//1페이지 - 0번, 2페이지 - 10번
		
	}
}
